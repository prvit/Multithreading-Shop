<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="660" Width="1218">
    <Grid>
        <Button Name="btn_Push" Content="Push" Margin="10,10,0,0" VerticalAlignment="Top" Height="53" HorizontalAlignment="Left" Width="111" Click="btn_Push_Click"/>
        <TextBox Name="tb_PushNumber" Height="23" Margin="126,25,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" TextAlignment="Center" HorizontalAlignment="Left" Width="120"/>
        <StackPanel VerticalAlignment="Bottom" Height="282" Margin="0,0,10,10">
            <ScrollViewer Name="sv_log" VerticalAlignment="Bottom" VerticalScrollBarVisibility="Auto" Height="279">

                <TextBlock Name="tb_logger" TextWrapping="Wrap" Text="" Margin="10,0" Background="#FFFBF7F7"/>
            </ScrollViewer>
        </StackPanel>
        <Button Name="btn_Close" Content="Close" Margin="0,10,10,0" VerticalAlignment="Top" Height="53" HorizontalAlignment="Right" Width="111" Click="btn_Close_Click"/>
        <Button x:Name="btn_Open" Content="Open" Margin="0,10,138,0" VerticalAlignment="Top" Height="53" HorizontalAlignment="Right" Width="111" Click="btn_Open_Click"/>


    </Grid>
</Window>
